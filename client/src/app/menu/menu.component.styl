:host {
  text-transform capitalize
  font-size 1.5em
  text-align center
  letter-spacing 1px
  font-family: 'Raleway', sans-serif;
  font-weight 300
}

font-color = #dbc2cf

.list {
  display block
  background-color rgba(#3c7a89, .1)
  border-radius 10px
  list-style none
  padding 0
  margin 0
  color font-color
  position sticky
  top 10%

  .list-item {
    padding 1rem 0
    transition background-color 150ms ease-out
    .link {
      color: #3c7a89
    }
    &:hover {
      background-color darkgray
      color font-color
    }
    &.active {
      background-color font-color
      color #fff
    }
  }
}
